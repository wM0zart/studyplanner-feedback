<h1 class="center"> Авторизация</h1>
<div class="row">
  <div class="col-xs-12">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal", role: "form"}) do |f| %>
   <div class="form-group">
      <div class="control-label col-sm-2"> 
    <%= f.label :Еmail %>
      </div>
      <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true , class: "form-control",  placeholder: "Email"%>
      </div>
    </div>
 
    <div class="form-group">
      <div class="control-label col-sm-2">  
    <%= f.label :Пароль %>
      </div>
      <div class="col-sm-8">
    <%= f.password_field :password, autocomplete: "off" ,  class: "form-control",  placeholder: "Введите пароль"%>
      </div>
    </div>


 <div class="form-group">
    <div class="control-label col-sm-10"> 
    <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
