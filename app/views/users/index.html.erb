<h1 align="center">Все пользователи</h1>
<div align="center">
  <%= will_paginate %>

	<% @users.each do |user| %>

	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li><%= link_to gravatar_for(user), user_path(user) %></li>
				<li class="feedback-title">
					<%= link_to user.username, user_path(user) %>
				</li>
				<li> <small>(<%=user.feedbacks.count%>  <%= Russian::pluralize(user.feedbacks.count, "отзыв", "отзывa", "отзывов") %>)</small></li>
			</div>
		</div>
	</ul>
<% end %>
  <%= will_paginate %>
</div>